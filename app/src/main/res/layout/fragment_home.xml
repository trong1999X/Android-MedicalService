<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical"
    android:background="@drawable/background_home">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành phố Hồ Chí Minh"
            android:textColor="#70B6D5"
            android:paddingLeft="25dp"
            android:paddingTop="4dp"
            android:textSize="13dp">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_location_on_24"
            >
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_blue">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_account_circle_24">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào, Trọng"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:paddingLeft="25dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính: Nam"
            android:textSize="18dp"
            android:paddingLeft="25dp"
            android:textColor="@color/white"
            android:paddingTop="25dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiều cao: 178cm"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:paddingLeft="25dp"
            android:paddingTop="45dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Tuổi: 21"
            android:textSize="18dp"
            android:paddingLeft="250dp"
            android:paddingTop="25dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="250dp"
            android:textColor="@color/white"
            android:paddingTop="45dp"
            android:text="Cân nặng: 58kg"
            android:textSize="18dp">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="21dp"
            android:hint="Tìm kiếm bác sĩ, triệu chứng, gói dịch vụ"
            android:background="@drawable/border_image">
        </EditText>

        <ImageView
            android:layout_width="39dp"
            android:layout_height="35dp"
            android:layout_marginLeft="355dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_search_24"></ImageView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh mục dịch vụ"
        android:textSize="18dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="20dp">
    </TextView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_cate">
        </Button>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/btn_cate">
        </Button>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/btn_cate">
        </Button>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="280dp"
            android:background="@drawable/btn_cate">
        </Button>
    </RelativeLayout>
</LinearLayout>